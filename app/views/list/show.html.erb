<h1><%= @list.name %></h1>
<hr>
<div class="container" id="content">
  <% @list.items.each do |item| %>
    <%= link_to item.description, edit_item_path(item) %></br>
  <% end %>  

<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'Edit list', edit_list_path %> </button>
<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'Delete this list',
                @list,
                :method => :delete,
                :data => { :confirm => 'Are you sure?' } %></button>
<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'New item', new_item_path(:list_id => @list.id) %></button></br></br>                 
<button class="btn btn-default btn-xs" style="float:left"><%= link_to 'List index', lists_path %></button>

</div>